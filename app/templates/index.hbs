<div class="container">
<h2>Accessory.ly</h2>

{{#each itemDetails as |item index|}}
    {{#collapsible-box changeItem2=(action "changeItem" index) as |close changeItem3|}}
        {{control-accessory changeItem=changeItem3 itemName=item.itemName itemColor = item.itemColor}}
        <button {{action close}}>Close</button>
    {{/collapsible-box}}
{{/each}}
<br/>
<button {{action 'pressRelease' 'Item'}}>Read our Press Release</button>

</div>